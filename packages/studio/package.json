{
  "name": "@smallwebco/tinypivot-studio",
  "type": "module",
  "version": "1.0.64",
  "description": "TinyPivot Studio - Core logic for building data studio applications with saved views, dashboards, and collaborative analytics",
  "author": "Small Web, LLC",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/Small-Web-Co/tinypivot",
  "repository": {
    "type": "git",
    "url": "https://github.com/Small-Web-Co/tinypivot.git",
    "directory": "packages/studio"
  },
  "bugs": {
    "url": "https://github.com/Small-Web-Co/tinypivot/issues"
  },
  "keywords": [
    "tinypivot",
    "studio",
    "data-studio",
    "dashboard",
    "saved-views",
    "analytics",
    "embedded-analytics"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean && cp src/style.css dist/style.css",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@smallwebco/tinypivot-core": "workspace:*",
    "@tiptap/core": "^2.2.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "~5.3.3"
  }
}
