{
  "name": "@smallwebco/tinypivot-storage-indexeddb",
  "type": "module",
  "version": "1.0.64",
  "description": "TinyPivot IndexedDB Storage - Browser-based storage adapter for TinyPivot Studio using IndexedDB",
  "author": "Small Web, LLC",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/Small-Web-Co/tinypivot",
  "repository": {
    "type": "git",
    "url": "https://github.com/Small-Web-Co/tinypivot.git",
    "directory": "packages/storage-indexeddb"
  },
  "bugs": {
    "url": "https://github.com/Small-Web-Co/tinypivot/issues"
  },
  "keywords": [
    "tinypivot",
    "storage",
    "indexeddb",
    "browser-storage",
    "offline-first"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@smallwebco/tinypivot-studio": "workspace:*",
    "idb": "^8.0.3"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "~5.3.3"
  }
}
